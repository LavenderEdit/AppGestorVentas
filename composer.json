{
    "name": "gestorventas/app",
    "description": "Gestor de ventas para una aplicación de gestión de inventarios y facturación.",
    "type": "project",
    "require": {
        "php": "^8.0",
        "vlucas/phpdotenv": "^5.5",
        "illuminate/database": "^8.0",
        "monolog/monolog": "^2.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Controllers\\": "app/controllers/",
            "Models\\": "app/models/",
            "Views\\": "app/views/",
            "Core\\": "app/core/",
            "Config\\": "app/config/",
            "Helpers\\": "app/helpers/",
            "Routes\\": "app/routes/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "php artisan key:generate"
        ]
    },
    "config": {
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}