{
    "name": "pastrana123/appgestorventas",
    "description": "Gestor de ventas",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Controllers\\": "controllers/",
            "Models\\": "models/",
            "Core\\": "core/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4"
    },
    "scripts": {
        "test": [
            "phpunit --testdox tests/"
        ]
    }
}